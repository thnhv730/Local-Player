<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="76dp"
    android:paddingStart="16dp"
    android:paddingEnd="12dp"
    android:foreground="?attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivQueueArt"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvQueueTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textStyle="bold"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@id/ivQueueArt"
        app:layout_constraintEnd_toStartOf="@id/btnQueueRemove"
        app:layout_constraintTop_toTopOf="@id/ivQueueArt"
        android:layout_marginStart="12dp"/>

    <TextView
        android:id="@+id/tvQueueSub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Artist â€¢ Album"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="@id/tvQueueTitle"
        app:layout_constraintEnd_toEndOf="@id/tvQueueTitle"
        app:layout_constraintBottom_toBottomOf="@id/ivQueueArt"/>

    <ImageButton
        android:id="@+id/btnQueueRemove"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Remove"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>